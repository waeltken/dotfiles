{{ if eq .chezmoi.os "darwin" -}}
eval (/opt/homebrew/bin/brew shellenv)
{{ else if and (eq .chezmoi.os "linux") (ne .chezmoi.arch "arm64") -}}
eval (/home/linuxbrew/.linuxbrew/bin/brew shellenv)
{{ end -}}

if status is-interactive
    # Commands to run in interactive sessions can go here
    set -gx GPG_TTY (tty)

    set -U PROJECT_PATHS ~/workspace
    set -gx DISPLAY :0

    # Shell plugins and completions
    {{ if eq .chezmoi.arch "amd64" }}
    # Plugin initialization guarded by availability
    if type -q navi
        navi widget fish | source
    end
    if type -q direnv
        direnv hook fish | source
    end
    if type -q starship
        starship init fish | source
    end
    if type -q atuin
        atuin init fish | source
    end
    if type -q kubectl
        kubectl completion fish | source
    end
    if type -q pack
        source (pack completion --shell fish)
    end
    {{ end }}

    # Add paths
    {{ if eq .chezmoi.os "darwin" }}
    fish_add_path ~/bin/
    {{ end }}
    fish_add_path ~/.bin/
    fish_add_path ~/.local/bin/
    fish_add_path ~/.yarn/bin/
    fish_add_path ~/.krew/bin/
    fish_add_path ~/.jbang/bin/
    fish_add_path ~/.cargo/bin/
    fish_add_path {{ .chezmoi.homeDir }}/.local/bin
end

if status is-login
    # Commands to run in login shells can go here
end

set fish_greeting

{{ if eq .chezmoi.arch "arm64" }}
set -gx EDITOR vim
{{ else }}
set -gx EDITOR nvim
{{ end }}

set -gx FUNCTIONS_CORE_TOOLS_TELEMETRY_OPTOUT 1
set -gx AZURE_DEV_COLLECT_TELEMETRY no

# pnpm
set -gx PNPM_HOME "{{ .chezmoi.homeDir }}/.local/share/pnpm"
fish_add_path $PNPM_HOME
# pnpm end

# Initialize zoxide if available
if type -q zoxide
    zoxide init fish | source
end
